---
import "../style/style.css";
const header = Astro.props.header;
const text = Astro.props.text;
const tpic = Astro.props.tpic;
const fact1 = Astro.props.fact1;
const fact2 = Astro.props.fact2;

---

<article class="t_card">
    <div class="t_cardbox">
    <img src={tpic}>
    <div class="overlay">
        <h6>Fun fact</h6>
        <p>{fact1}</p>
        <p>{fact2}</p>
    </div>
    </div>
    <h3>{header}</h3>
    <p>{text}</p>
</article>

<style>
    img{
        width: 350px;
        height: auto;
        display: block;
    }

    .t_card{
display: flex;
flex-direction: column;
margin: 2%;
    }

    .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(251, 244, 220, 0.8);
    color: var(--brown);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 2;
    font-size: 11px;
  }

  .overlay h6{
    font-size: 20px;
    font-family:"hwt-arabesque", sans-serif ;
  }

  .t_cardbox:hover .overlay {
    opacity: 1;
  }

  .t_cardbox {
    width: 300px;
    height: 300px;
    overflow: hidden;

    position: relative;
  }
</style>