---
const { ipic, text } = Astro.props;
---

<div class="card">
  <img src={ipic} />
  <p>{text}</p>
</div>

<style>
  img {
    width: 450px;
    height: 450px;
  }
  .card {
    margin-left: 7%;
    margin-right: 6%;
  }
  @media screen and (max-width: 700px) {
    img {
      width: 350px;
      height: 350px;
    }

    .card {
      margin-left: 3%;
      margin-right: 4%;
    }
  }
</style>
