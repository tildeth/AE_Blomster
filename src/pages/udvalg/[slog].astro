const { single } = Astro.props;

---

<article class="singleview">
  <img src={single.billede} alt="billede" />
  <div class="textbox_single">
    <h3>{single.produktnavn}</h3>
    <div class="textbox2">
      <p class="bold">Pris</p>
      <p class="bold">Farver</p>
      <p>{single.pris}</p>
      <p>{single.farver}</p>
    </div>
    <p class="bold">Beskrivelse</p>
    <p>{single.beskrivelse}</p>
    <button id="add_knap">Tilføj til kurv</button>
  </div>
<div id="kurv2" class="hide">
  <Kurv k_navn={single.produktnavn} k_img={single.billede} k_pris={single.pris} />
</div>
</article>


  <style>
    img {
      display: block;
      width: 100%;
      height: auto;
    }

  .bold {
    font-weight: bold;
  }

    .singleview {
      display: grid;
      grid-template-columns: 1fr 1fr;
      margin: 5%;
      gap: 5%;
    }
    .textbox2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }
    .textbox_single {
    }

    .hide{
    display: none;
  }
  </style>

<script>
  function tilfojKurv() {
    console.log("Tilføj til kurv");

    document.querySelector("#kurv2").classList.remove("hide");
  }

  function start() {
    document.querySelector("#add_knap").addEventListener("click", tilfojKurv);
  }

  document.addEventListener("DOMContentLoaded", start);
</script>